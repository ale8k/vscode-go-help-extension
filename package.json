{
  "name": "go-help",
  "displayName": "Go Help",
  "description": "A simple extension pack providing QoL improvements for Golang development.",
  "icon": "images/go.png",
  "pricing": "Free",
  "publisher": "alexkilroy",
  "repository": {},
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Debuggers"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [],
    "configuration": {
      "title": "Go Help",
      "properties": {
        "gohelp.codeLens.interfaces.implementations.names": {
          "type": "boolean",
          "default": true,
          "description": "Display interface implementations code lens. Note if this is disabled, so are interface methods."
        },
        "gohelp.codeLens.interfaces.implementation.methods": {
          "type": "boolean",
          "default": true,
          "description": "Display interface method implementations code lens."
        },
        "gohelp.codeLens.interfaces.references.names": {
          "type": "boolean",
          "default": true,
          "description": "Display interface references code lens. Note if this is disabled, so are interface methods."
        },
        "gohelp.codeLens.interfaces.references.methods": {
          "type": "boolean",
          "default": true,
          "description": "Display interface method references code lens."
        }
      }
    }
  },
  "codeLensProvider": [
    {
        "language": "go",
        "provider": {
            "type": "GoImplementationProvider"
        }
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
